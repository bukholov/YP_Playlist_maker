<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/mediaFragment">
    <fragment
        android:id="@+id/favoriteTracksFragment"
        android:name="com.example.yp_playlist_maker.media.ui.FavoriteTracksFragment"
        android:label="fragment_favorite_tracks"
        tools:layout="@layout/fragment_favorite_tracks" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.yp_playlist_maker.settings.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_webFragment"
            app:destination="@id/webFragment" />
    </fragment>
    <fragment
        android:id="@+id/playlistsFragment"
        android:name="com.example.yp_playlist_maker.media.ui.PlaylistsFragment"
        android:label="fragment_playlists"
        tools:layout="@layout/fragment_playlists" />
    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.example.yp_playlist_maker.media.ui.MediaFragment"
        android:label="MediaFragment" >
        <action
            android:id="@+id/action_mediaFragment_to_favoriteTracksFragment"
            app:destination="@id/favoriteTracksFragment" />
        <action
            android:id="@+id/action_mediaFragment_to_playlistsFragment"
            app:destination="@id/playlistsFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.yp_playlist_maker.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_audioPlayerActivity"
            app:destination="@id/audioPlayerActivity" />
    </fragment>

    <fragment
        android:id="@+id/webFragment"
        android:name="com.example.yp_playlist_maker.sharing.ui.WebFragment"
        android:label="fragment_web_uri"
        tools:layout="@layout/fragment_web" >
        <argument
            android:name="uri_link"
            app:argType="string"
            app:nullable="false" />
    </fragment>
    <activity
        android:id="@+id/audioPlayerActivity"
        android:name="com.example.yp_playlist_maker.player.ui.AudioPlayerActivity"
        android:label="activity_audio_player"
        tools:layout="@layout/activity_audio_player" />
</navigation>