<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PanelResult"
    android:id="@+id/ll_no_internet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/search_results_panel_margin_top"
        android:layout_weight="1">

        <ImageView style="@style/PlugImageView"
            android:id="@+id/iv_no_internet"
            app:srcCompat="@drawable/no_internet" />

    </FrameLayout>

    <TextView style="@style/PanelResult.TextView"
        android:id="@+id/tv_not_found"
        android:layout_marginTop="@dimen/search_results_panel_text_margin_top"
        android:text="@string/no_internet" />

    <Button style="@style/PanelResult.Button"
        android:id="@+id/button_retry"
        android:layout_marginTop="@dimen/search_results_panel_button_retry_margin_top"
        android:text="@string/internet_retry" />
</LinearLayout>