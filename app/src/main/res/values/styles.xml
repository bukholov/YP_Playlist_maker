<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_activity_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/main_layout_margin_between_button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="cornerRadius">@dimen/main_button_corner_radius</item>
    </style>

    <style name="SettingsMenuStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:paddingVertical">@dimen/settings_element_padding</item>
        <item name="android:paddingStart">@dimen/settings_element_padding</item>
        <item name="android:paddingEnd">@dimen/settings_icon_end_padding</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:textSize">@dimen/settings_activity_font_size</item>
    </style>

    <style name="TitleActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/title_label_margin</item>
        <item name="android:layout_marginStart">@dimen/title_label_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_label_margin_bottom</item>
        <item name="android:padding">@dimen/title_label_padding</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/settings_title_font_size</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/settings_title_icon_padding</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="TrackStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackStyle.TitleText">
        <item name="android:textSize">@dimen/track_item_title_font_size</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TrackStyle.BodyText">
        <item name="android:textSize">@dimen/track_item_body_font_size</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PanelResult">
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PanelResult.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/search_results_panel_text_hpadding</item>
        <item name="android:textSize">@dimen/search_activity_font_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PanelResult.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/search_results_panel_retry_button_font_size</item>
        <item name="cornerRadius">@dimen/search_results_panel_retry_button_round_corner</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
    </style>

    <style name="PlugImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_weight">1</item>
    </style>>

    <style name="AudioPlayerStyle">

    </style>

    <style name="AudioPlayerStyle.Head">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AudioPlayerStyle.Head.TrackName">
        <item name="android:textSize">@dimen/audio_player_track_name_font_size</item>
    </style>
    <style name="AudioPlayerStyle.Head.ArtistName">
        <item name="android:textSize">@dimen/audio_player_artist_name_font_size</item>
    </style>

    <style name="AudioPlayerStyle.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_player_info_font_size</item>
    </style>

    <style name="AudioPlayerStyle.TextView.TrackParams">
        <item name="android:layout_marginStart">@dimen/audio_player_info_horizontal_margin</item>
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:layout_width">124dp</item>
    </style>

    <style name="AudioPlayerStyle.TextView.InfoDesc">
        <item name="android:layout_marginEnd">@dimen/audio_player_info_horizontal_margin</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/audio_player_info_font_size</item>
        <item name="itemIconTint">@color/menu_selector</item>
        <item name="itemTextColor">@color/menu_selector</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="itemActiveIndicatorStyle">@color/YP_Blue</item>
    </style>

</resources>